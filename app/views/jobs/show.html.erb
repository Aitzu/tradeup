<p id="notice"><%= notice %></p>


<h2><%= @message %> </h2>


<p>
  <strong>Job Title:</strong>
  <%= @job.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= @job.price %>
</p>

<% if @job.image.attachment %>
    <%= image_tag @job.image, width:'300'%>
<% end %>

<p>
  <strong>Creator:</strong>
  <a href="../user_profiles/<%=@job.users.first.user_profile.id%>">
    <%= @job.users.first.username %>
  </a>
</p>

<p>
  <strong>Job Description:</strong>
  <%= @job.description %>
</p>

<p>
  <strong>Time:</strong>
  <%= @job.tenant_available_time %>
</p>

<% if @is_current_users_job %>
  <%= link_to 'Edit', edit_job_path(@job) %> 
<% end %>

<% if current_user.id != @job.users.first.id && @job.users.count.to_i < 2%>
  <%= link_to 'Accept Job', jobs_accept_path %>
<% end %>

<%= link_to 'View All Jobs', jobs_path %>
