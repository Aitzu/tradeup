<h1>My Jobs</h1>

<% if @my_jobs.count > 0 %>
    <h2>Jobs I Created: </h2>
    <% @my_jobs.each do |job| %>
        <p>Title: <%= job.title %></p><br>
        <% if !job.images.empty? %>
            <% (0...job.images.count).each do |image| %>
                <%= image_tag job.images[image], width:'300'%>
            <% end %>
        <% end %>
        <p>Creator: <%= job.users.first.username %></p>
        <p>Status: <%= job.job_status.status.capitalize %></p>
        <%= link_to 'View Job', job %>
        <hr>
    <% end %>
<% end %>

